<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/basketName"
            android:hint="Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/basketPrice"
            android:hint="@string/price"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/basketName"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintWidth_min="35dp"
            app:layout_constraintEnd_toStartOf="@+id/basketShop" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/basketQuantity"
            app:layout_constraintTop_toBottomOf="@+id/basketPrice"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:hint="@string/quantity"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:srcCompat="@drawable/ic_baseline_add_24"
            android:id="@+id/basketQuantAdd"
            app:layout_constraintStart_toEndOf="@+id/basketQuantity"
            app:layout_constraintTop_toTopOf="@+id/basketQuantity"
            app:layout_constraintBottom_toBottomOf="@+id/basketQuantity" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:srcCompat="@drawable/ic_baseline_remove_24"
            android:id="@+id/basketQuantMinus"
            app:layout_constraintTop_toTopOf="@+id/basketQuantity"
            app:layout_constraintEnd_toStartOf="@+id/basketQuantity"
            app:layout_constraintBottom_toBottomOf="@+id/basketQuantity" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_remove_shopping_cart_24"
            android:id="@+id/basketRemove"
            app:layout_constraintBottom_toBottomOf="@+id/basketQuantity"
            app:layout_constraintStart_toEndOf="@+id/basketQuantAdd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/basketQuantity" />

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/basketItemTotal"
            android:hint="Total for Item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/basketShop" />

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/basketShop"
            android:hint="Shop"
            android:textAlignment="center"
            app:layout_constraintWidth_min="35dp"
            app:layout_constraintEnd_toStartOf="@+id/basketItemTotal"
            app:layout_constraintStart_toEndOf="@+id/basketPrice"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>