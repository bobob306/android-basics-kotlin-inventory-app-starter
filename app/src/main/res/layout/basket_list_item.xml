<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/basketName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:hint="Name"
            app:layout_constraintWidth_min="150dp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/basketPrice"
            app:layout_constraintStart_toEndOf="@+id/basketName"
            app:layout_constraintTop_toTopOf="@+id/basketName"
            android:layout_marginStart="8dp"
            android:hint="@string/price" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/basketQuantity"
            app:layout_constraintTop_toBottomOf="@+id/basketPrice"
            app:layout_constraintStart_toStartOf="@+id/basketPrice"
            android:layout_marginTop="8dp"
            android:hint="@string/quantity"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:srcCompat="@drawable/ic_baseline_add_24"
            android:id="@+id/basketQuantAdd"
            app:layout_constraintStart_toEndOf="@+id/basketQuantity"
            app:layout_constraintTop_toTopOf="@+id/basketQuantity"
            app:layout_constraintBottom_toBottomOf="@+id/basketQuantity" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:srcCompat="@drawable/ic_baseline_remove_24"
            android:id="@+id/basketQuantMinus"
            app:layout_constraintTop_toTopOf="@+id/basketQuantity"
            app:layout_constraintEnd_toStartOf="@+id/basketQuantity"
            app:layout_constraintBottom_toBottomOf="@+id/basketQuantity" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_remove_shopping_cart_24"
            android:id="@+id/basketRemove"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/basketPrice"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/basketQuantity" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemTotal"
            app:layout_constraintTop_toTopOf="@+id/basketPrice"
            app:layout_constraintEnd_toStartOf="@+id/basketRemove"
            android:layout_marginEnd="8dp"
            android:hint="Total for Item" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/basketShop"
            app:layout_constraintStart_toEndOf="@+id/basketPrice"
            app:layout_constraintEnd_toStartOf="@+id/itemTotal"
            app:layout_constraintTop_toTopOf="@+id/basketName"
            android:hint="Shop Name" />

</androidx.constraintlayout.widget.ConstraintLayout>